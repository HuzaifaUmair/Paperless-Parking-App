<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="#7884CC"
    android:outlineSpotShadowColor="#7884CC"
    android:outlineAmbientShadowColor="#7884CC"
    android:layout_marginTop="10dp"
    android:id="@+id/single_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#Slot1"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textFontWeight="700"
            android:id="@+id/slot_name"
            >
        </TextView>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="180dp"
            android:src="@drawable/car"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textFontWeight="500"
            android:id="@+id/slot_status"
            />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"

         >
        <Button
            android:layout_width="134dp"
            android:layout_height="33dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/cardbtn_bg"
            android:text="Request Slot"
            android:id="@+id/btn_slot"

            ></Button>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=""
             android:layout_marginLeft="25dp"
             android:layout_marginTop="7dp"
             android:textColor="@color/white"
             android:id="@+id/exit"/>
     </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>